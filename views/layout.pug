doctype html
html
	head
		title Node Express
		link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
	body
		nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-5
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo01', aria-controls='navbarTogglerDemo01', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#navbarTogglerDemo01.collapse.navbar-collapse
				a.navbar-brand(href='#') NodeExpress
				ul.navbar-nav.mt-2.mt-lg-0
					li.nav-item
						a.nav-link(href='/') Home
					li.nav-item
						a.nav-link(href='/articles/add') Add Article
		.container
			!= messages('message', locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
			block content
			br
			hr
			footer
				p Copyright &copy; 2018
		script(src="/bower_components/jquery/dist/jquery.min.js")
		script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
		script(src="/js/main.js")